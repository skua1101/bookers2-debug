<table class="table table-sm">
  <thead>
    <th>image</th>
    <th>name</th>
    <th colspan="4"></th>
  </thead>
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image('50x50') %></td>
      <td><%= user.name %></td>
      <td>フォロー数：<%= user.active_relationships.count %></td>
      <td>フォロワー数：<%= user.passive_relationships.count %></td>
      <td><%= link_to "Show", "/users/#{user.id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>